@model RotaSeguraWeb.Models.DriverDTO

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="content-wrapper">
    <h2>@ViewData["Title"]</h2>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <!-- Primeira coluna -->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="DName" class="control-label"></label>
                                    <input asp-for="DName" class="form-control" />
                                    <span asp-validation-for="DName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DMobile" class="control-label"></label>
                                    <input asp-for="DMobile" class="form-control" />
                                    <span asp-validation-for="DMobile" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DAddress" class="control-label"></label>
                                    <input asp-for="DAddress" class="form-control" />
                                    <span asp-validation-for="DAddress" class="text-danger"></span>
                                </div>
                            </div>
                            <!-- Segunda coluna -->
                            <div class="col-md-4">

                                <div class="form-group">
                                    <label asp-for="DAge" class="control-label"></label>
                                    <input asp-for="DAge" class="form-control" />
                                    <span asp-validation-for="DAge" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DLicenseno" class="control-label"></label>
                                    <input asp-for="DLicenseno" class="form-control" />
                                    <span asp-validation-for="DLicenseno" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                        <label asp-for="IsActive" class="control-label"></label>
                                        <select asp-for="IsActive" class="form-control" asp-items="@(ViewBag.IsActive)"></select>
                                        <span asp-validation-for="IsActive" class="text-danger"></span>
                                    </div>
                            </div>
                            <!-- Terceira coluna -->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="DLicenseExpDate" class="control-label"></label>
                                    <input asp-for="DLicenseExpDate" class="form-control" />
                                    <span asp-validation-for="DLicenseExpDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DTotalExp" class="control-label"></label>
                                    <input asp-for="DTotalExp" class="form-control" />
                                    <span asp-validation-for="DTotalExp" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DDoj" class="control-label"></label>
                                    <input asp-for="DDoj" class="form-control" />
                                    <span asp-validation-for="DDoj" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DRef" class="control-label"></label>
                                    <input asp-for="DRef" class="form-control" />
                                    <span asp-validation-for="DRef" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Sallvar" class="btn btn-primary" />
                            </div>
                             -
                            <div>
                                <a asp-action="Index">Voltar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
